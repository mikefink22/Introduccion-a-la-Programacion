Algoritmo Encuentro3_Extra7
	Definir lado1,lado2,lado3,lado4, perimetro,base,altura,area Como Real;
	Escribir "Ingrese el valor de los 4 lados del paralelogramo";
	leer lado1,lado2,lado3,lado4;
	perimetro = lado1+lado2+lado3+lado4;
	Escribir "la base y altura del paralelogramo";
	leer base,altura;
	area = base*altura;
	Escribir "El perímetro del paralelogramo es de: " perimetro;
	Escribir "El área del paralelogramo es de: " area;
FinAlgoritmo
